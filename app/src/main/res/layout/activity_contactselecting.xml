<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contactselecting">

    <Button
        android:id="@+id/contactnumbtn"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/toolbarc"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Add Contact From phone"
        />


    <View
        android:id="@+id/divider2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/opencontect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Contect Manually"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/addcontactname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:textColorHint="@color/hintcolor"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:background="?android:attr/editTextBackground"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbarc"
            />

        <EditText
            android:id="@+id/addcontactnum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="?android:attr/editTextBackground"
            android:hint="Phone Number"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/hintcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbarc"
            android:layout_marginBottom="15dp"
            />
        <Button
            android:id="@+id/addsavebtn"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/toolbarc"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Save"
            />


    </LinearLayout>


</LinearLayout>