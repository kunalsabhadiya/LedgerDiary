<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        <RelativeLayout
            android:id="@+id/remdate"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/datebg"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/datebg"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/remmonth"
                    android:text="March"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@color/gradcolor1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/remday"
                    android:background="#F4F1F1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="21sp"
                    android:text="04"
                    android:textAlignment="center"
                    android:textColor="#030F55"
                    />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/remdate"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/remdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/remdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remdescription"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="Due in 3 days"
                android:textColor="@color/gradcolor1" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/amountbg"
            >

            <TextView
                android:id="@+id/remamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="250"
                android:textColor="@color/gradcolor1"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>