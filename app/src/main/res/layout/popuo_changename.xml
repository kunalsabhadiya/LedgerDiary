<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textbox"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:fontFamily="@font/spartan_bold"
       android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/pptitle"
        android:text="Change username"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/profileimage"
        android:layout_below="@+id/pptitle"
        android:id="@+id/ppprofile"
        />
    <EditText
        android:id="@+id/ppnewname"
        android:background="@drawable/searchview"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ppprofile"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spartan_bold"
        android:hint="Enter new username"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/ppnewname">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="cancle"
            android:id="@+id/ppcancle"
            android:textSize="18sp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="save"
            android:id="@+id/ppsave"
            android:textSize="18sp"/>
    </LinearLayout>


</RelativeLayout>