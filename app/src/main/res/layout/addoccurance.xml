<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transactionbg"
    tools:context=".reminder.addoccurance">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:id="@+id/occbackbtn"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/check"
            android:layout_alignParentEnd="true"
            android:id="@+id/occsubmitbtn"
            />
        <TextView
            android:id="@+id/occtransactiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="Add reccuring payment"
            android:textAlignment="center"
            android:fontFamily="@font/spartan_regular"
            android:textColor="@color/texttitle"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/occrupee"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/occtransactiontext"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/rupee" />
        <EditText
            android:textSize="25sp"
            android:id="@+id/occamount"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="50dp"
            android:hint="Add Amount"
            android:backgroundTint="@color/toolbarc"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/gradcolor1"
            android:layout_below="@id/occtransactiontext"
            android:textColorHint="@color/hintcolor"
            android:layout_toEndOf="@id/occrupee"/>
        <ImageView
            android:id="@+id/occdesc"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/description"
            android:layout_below="@+id/occrupee"
            />
        <EditText
            android:id="@+id/occdescription"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add Description"
            android:inputType="text"
            android:backgroundTint="@color/toolbarc"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/black"
            android:layout_below="@id/occamount"
            android:textColorHint="@color/hintcolor"
            android:layout_toEndOf="@id/occdesc"/>
        <RelativeLayout
            android:id="@+id/occurancedatelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/occdescription"
            android:gravity="center"
            >
        <RelativeLayout
            android:id="@+id/occrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/occcalander"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/calendar" />
            <TextView
                android:id="@+id/occdate"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_toEndOf="@id/occcalander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/08/2022"
                android:textColor="@color/hintcolor"/>

        </RelativeLayout>
            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/occrl"
            android:layout_marginStart="30dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/occtimeimg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/clock" />
            <TextView
                android:id="@+id/occtime"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_toEndOf="@id/occtimeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textColor="@color/hintcolor"/>

        </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearly"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/occurancedatelayout"
            >
            <ImageView
                android:id="@+id/bellimg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bell" />
            <Spinner
                android:id="@+id/occuringtime"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:background="@color/hintcolor"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlytv"
      android:layout_below="@+id/linearly"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/searchview"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/occperiodshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/toolbarend"
            android:fontFamily="@font/spartan_bold"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/occdateshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hintcolor"
            android:layout_margin="2dp"
            android:fontFamily="@font/spartan_bold"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/occduedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_margin="2dp"
            android:fontFamily="@font/spartan_bold"
            android:textSize="20sp"
            android:visibility="gone"
            android:textAlignment="center"
            />

    </LinearLayout>



</RelativeLayout>
